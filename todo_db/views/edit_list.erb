<section id="todos">
  <header>
    <h2>Editing "<%= list[:name] %>"</h2>
    <ul>
      <li>
        <form action="/lists/<%= list[:id] %>/delete" method="post" class="delete">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= list[:id] %>" method="post">
  <dl>
    <dt>
      <label for="new_name">Enter the new name for the list:</label>
    </dt>
    <dd>
      <input name="new_name" placeholder="<%= params[:new_name] || list[:name] %>" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= list[:id] %>">Cancel</a>
  </fieldset>
</form>